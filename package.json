{
  "name": "express-ts-starter",
  "version": "1.0.0",
  "description": "express with typescirpt starter kit",
  "paths": {
    "@/*": [
      "*"
    ]
  },
  "keywords": [
    "express",
    "nodejs",
    "typescript"
  ],
  "license": "ISC",
  "author": "ubeyidah",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx --watch src/main.ts",
    "start": "node dist/main.js",
    "build": "tsc && tsc-alias",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "express": "^5.1.0",
    "nviron": "^1.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
